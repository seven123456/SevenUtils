<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >

    <TextView
        android:id="@+id/tv_loading_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:textColor="@color/java_seven_text_title_172D3C" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_below="@+id/tv_loading_title"
        android:background="@color/java_white_background"
        android:textColor="@color/java_seven_text_view_FF3A30" />
</RelativeLayout>
