<resources>

    <!-- Base application theme. -->
    <style name="java_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/java_colorPrimary</item>
        <item name="colorPrimaryDark">@color/java_colorPrimaryDark</item>
        <item name="colorAccent">@color/java_colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--edittext下划线颜色以及选择时颜色-->
    <style name="java_MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/java_seven_text_view_FF3A30</item>
        <item name="colorControlActivated">@color/java_seven_text_view_FF3A30</item>
    </style>
    <!--basetitle-->
    <declare-styleable name="java_BaseToolBar">
        <attr name="java_left_icon" format="integer" />
        <attr name="java_show_left_icon" format="boolean" />
        <attr name="java_centre_title" format="string|reference" />
        <attr name="java_right_title" format="string|reference" />
        <attr name="java_right_icon1" format="integer" />
        <attr name="java_right_icon2" format="integer" />
        <attr name="java_right_icon3" format="integer" />
        <attr name="java_right_type" format="enum">
            <enum name="show_title" value="1" /><!--显示右边title-->
            <enum name="show_right_icon" value="2" /><!--显示右边单个icon-->
            <enum name="show_right_icon_all" value="3" /><!--显示右边所有icon-->
            <enum name="show_title_icon" value="4" /><!--显示右边title和icon-->
        </attr>
    </declare-styleable>

    <declare-styleable name="java_BaseLoadStatusView">
        <attr name="java_loading_view" format="reference" />
        <attr name="java_error_view" format="reference" />
        <attr name="java_empty_view" format="reference" />
        <attr name="java_noNetwor_view" format="reference" />
    </declare-styleable>
</resources>
